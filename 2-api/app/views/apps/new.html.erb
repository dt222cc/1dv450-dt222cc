<% content_for :title, "Apply for API-key" %>
<% content_for :header, "Add an application to get your API-key" %>
<%= render 'layouts/errors' %>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @app do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name, required: true, class: "form-control" %>
        
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control" %>
            
            <%= f.submit "Register", class: "btn btn-primary margin-top-10" %>
        <% end %>
        <p class="margin-top-10">Changed your mind? <%= link_to "Go back to the dashboard", current_user %></p>
    </div>
</div>
