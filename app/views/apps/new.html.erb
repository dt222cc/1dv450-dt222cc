<% content_for :title do %>
Apply for API-key
<% end %>
<% content_for :header do %>
Add an application to get your API-key
<% end %>

<% if @app.errors.any? %>
    <div class="alert alert-danger custom-box" role="alert">
        <% for message_error in @app.errors.full_messages %>
            <p><%= message_error %></p>
        <% end %>
    </div>
<% end %>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @app do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
        
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control" %>
            
            <%= f.submit "Register", class: "btn btn-primary margin-top-10" %>
        <% end %>
        <p class="margin-top-10">Changed your mind? <%= link_to "Go back to the dashboard", current_user %></p>
    </div>
</div>
